<!DOCTYPE html>
<html lang="ja">

  <!-- Head -->
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PureSender</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/common.js"></script>
  </head>

  <!-- Body -->
  <body style="padding-top:60px">

    <!-- Header -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a href="/" class="brand">PureSender</a>
          <ul class="nav">
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-tags"></i> Categories<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% @categories.each do |category| %>
                <li><a href="/categories/<%= category.id %>"><i class="icon-folder-open"></i> <%= category.name %></a></li>
              <% end %>
            </ul>
            </li>
          </ul>

          <ul class="nav pull-right">
            <li><a href="/logout"><i class="icon-off"></i> Logout</a></li>
          </ul>
        </div>
      </div>
    </div><!-- /Header -->

    <!-- Content -->
    <div class="container-fluid">
      <!--
      <div class="row-fluid">
        <div class="hero-unit">
          <h1>File Downloader</h1>
        </div>
      </div>
      -->
      <%= yield %>

    </div><!-- /Content -->

    <!-- Footer -->
    <hr>
    <div id="footer" class="row-fluid text-center">
      <p>Copyright&copy; 2015 <a href="http://google.com/">yurakawa</a></p>
    </div><!-- /Footer -->

  </body>
</html>
